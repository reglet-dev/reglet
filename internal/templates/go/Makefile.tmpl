.PHONY: build clean test help

PLUGIN_NAME={{.PluginName}}.wasm

build: ## Build plugin to WASM
	@echo "Building {{.PluginName}} plugin to WASM..."
	GOOS=wasip1 GOARCH=wasm go build -buildmode=c-shared -o $(PLUGIN_NAME) .
	@echo "Built: $(PLUGIN_NAME)"
	@ls -lh $(PLUGIN_NAME)

clean: ## Remove build artifacts
	@echo "Cleaning..."
	rm -f $(PLUGIN_NAME)

test: ## Run plugin tests (native Go, not WASM)
	@echo "Running tests..."
	go test -v ./...

fmt: ## Format code
	go fmt ./...

lint: ## Run linter
	golangci-lint run

help: ## Display this help message
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[36m%-15s\033[0m %s\n", $$1, $$2}'

.DEFAULT_GOAL := help
